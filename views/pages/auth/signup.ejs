<%- include('../../partials/head.ejs') %>

<div class="container">
    <div class="row">
        <h3 class="px-4 mt-4 text-success">Create a new account</h3>
        <div class="col-md-6 offset-md-3 p-3">
            <form action="/auth/signup" method="POST">
            <div class="form-group py-3">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" class="rounded-pill form-control <%= error.username ? 'is-invalid' : '' %> " value="<%= value.username && value.username %>">
                <div class="invalid-feedback">
                    <%= error.username && error.username %>
                </div>
            </div>
            <div class="form-group py-2">
                <label for="Email" class="mx-2">Email</label>
                <input type="email" name="email" id="email" class="rounded-pill form-control <%= error.email ? 'is-invalid' :'' %>" value="<%= value.email && value.email %>">
                <div class="invalid-feedback">
                    <%= error.email && error.email %>
                </div>
            </div>
            <div class="form-group py-2">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="rounded-pill form-control <%= error.password ? 'is-invalid' : '' %>" value="<%= value.password && value.password %>">
                <div class="invalid-feedback">
                    <%= error.password && error.password %>
                </div>
            </div>
            <div class="form-group py-2">
                <label for="passwd">Re-enter password</label>
                <input type="password" name="passwd" id="passwd" class="rounded-pill form-control <%= error.passwd ? 'is-invalid' : '' %>">
                <div class="invalid-feedback">
                    <%= error.passwd && error.passwd %>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class=" rounded-pill btn my-2 btn-lg btn-block btn-success" value="Signup" >   
            </div>
            </form>
             <a href="/auth/login" class="text-decoration-none text-secondary text-center my-2">Already have an account? Login here.</a>
            
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>