<%- include('../../partials/head.ejs') %>

<div class="container">
    <div class="row">
        <h3 class="px-4 mt-4 text-success">Login to your account</h3>
        <div class="col-md-6 offset-md-3 p-3">
            <form action="/auth/login" method="POST">
            <div class="form-group py-2">
                <label for="Email" class="mx-2">Email</label>
                <input type="email" name="email" id="email" class="rounded-pill form-control <%= error.msg ? 'is-invalid' :'' %>">
            </div>
            <div class="form-group py-2">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="rounded-pill form-control <%= error.msg ? 'is-invalid' :'' %>">
                <div class="invalid-feedback">
                    <%= error.msg && error.msg %>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class=" rounded-pill btn my-2 btn-lg btn-block btn-success" value="Login" >   
                <div class="invalid-feedback">
                    <%= error.msg && error.msg %>
                </div>
            </div>
            <a href="/auth/signup" class="text-decoration-none text-secondary text-center my-2">Don't have an account? Signup here.</a>
            </form>
            
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>